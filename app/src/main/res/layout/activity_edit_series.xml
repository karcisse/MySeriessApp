<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_series"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.karol.myseriesapp.activities.AddSeriesActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textNoSuggestions"
        android:ems="10"
        android:layout_marginTop="27dp"
        android:id="@+id/series_name"
        android:contentDescription="Series Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:background="@drawable/text_box_style"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginStart="28dp"
        android:id="@+id/episode_number"
        android:layout_width="50dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/season_number"
        android:layout_alignBottom="@+id/season_number"
        android:layout_toEndOf="@+id/season_number"
        android:background="@drawable/text_box_style"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginStart="22dp"
        android:layout_marginTop="11dp"
        android:id="@+id/season_number"
        android:textAlignment="center"
        android:layout_below="@+id/series_name"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:background="@drawable/text_box_style"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <com.karol.myseriesapp.controls.EditSeriesButton
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:id="@+id/edit_button" />

</RelativeLayout>
